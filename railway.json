{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ALWAYS"
  },
  "services": {
    "server": {
      "path": "server",
      "start": "npm run start",
      "install": "npm install",
      "build": "npm run build"
    },
    "client": {
      "path": "client",
      "install": "npm install",
      "build": "npm run build"
    }
  }
}
